             xmlns:vm="clr-namespace:DirectorMAUI.ViewModel"
             x:Class="DirectorMAUI.Views.AsignarDGView"
             Title="AsignarDGView">
    <ContentPage.BindingContext>
        <vm:DirectorViewModel></vm:DirectorViewModel>
    </ContentPage.BindingContext>
